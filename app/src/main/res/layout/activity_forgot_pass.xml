<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/mau_nen"
    tools:context=".ForgotPass_Activity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        app:srcCompat="@drawable/logo_nen" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/nunito"
        android:text=" Quên mật khẩu?"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/ic_email"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint=" Nhập E-mail của bạn"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ed_acount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/ic_person"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint=" Nhập tên tài khoản"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins"
        android:text="* chúng tôi sẽ gửi đến đây để đặt lại mật khẩu mới của bạn"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/bt_send"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bd_bt"
        android:fontFamily="@font/nunito"
        android:text="gửi"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nunito"
        android:text="Hoặc đăng nhập?"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />
</LinearLayout>