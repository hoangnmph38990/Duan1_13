<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito"
        android:padding="5dp"
        android:text="Doanh Thu"
        android:textColor="@color/blue"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <com.github.mikephil.charting.charts.PieChart-->
<!--        android:id="@+id/dt_piechart"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="20dp"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textView10" />-->

    <Button
        android:id="@+id/nh_bt_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/boder"
        android:fontFamily="@font/poppins"
        android:text="Từ ngày"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/nh_ed_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="338dp"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="@font/poppins"
        android:hint="Nhập ngày bắt đầu"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/nh_bt_from"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/nh_bt_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/boder"
        android:fontFamily="@font/poppins"
        android:text="Đến ngày"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nh_bt_from" />

    <Button
        android:id="@+id/nh_bt_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/boder"
        android:fontFamily="@font/poppins"
        android:text="Doanh thu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nh_bt_to" />

    <EditText
        android:id="@+id/nh_ed_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="@font/poppins"
        android:hint="Nhập ngày kết thúc"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/nh_bt_to"
        app:layout_constraintTop_toBottomOf="@+id/nh_ed_from" />

    <TextView
        android:id="@+id/nh_tv_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="37dp"
        android:text="0Đ"
        android:textColor="@color/red"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/nh_bt_dt"
        app:layout_constraintTop_toBottomOf="@+id/nh_ed_to" />

</androidx.constraintlayout.widget.ConstraintLayout>