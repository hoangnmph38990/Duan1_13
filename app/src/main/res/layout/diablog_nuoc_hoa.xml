<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bd_diag"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="Nước Hoa" />

    <LinearLayout
        android:background="@drawable/boder"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/nh_diag_ed_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bd_view"
            android:ems="10"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:hint="Tên nước hoa"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/nh_diag_spinner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/nh_diag_ed_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:background="@drawable/bd_view"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Nhập giá tiền: "
            android:inputType="number"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/nh_diag_ed_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bd_view"
            android:ems="10"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:hint="Nhập số lượng: "
            android:inputType="number"
            android:padding="10dp"
            android:textSize="14sp"
            android:autofillHints="" />

        <ImageView
            android:id="@+id/nh_diag_iv"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:src="@drawable/img_1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nh_diag_bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/bd_bt_blue_teal"
            android:fontFamily="@font/nunito"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/nh_diag_bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/bd_bt"
            android:fontFamily="@font/nunito"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>